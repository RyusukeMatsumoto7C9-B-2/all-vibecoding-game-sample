
{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "git -c user.name=\"RyusukeMatsumoto\" -c user.email=\"matsumotokakadevelop1102@gmail.com\" add . && git -c user.name=\"RyusukeMatsumoto\" -c user.email=\"matsumotokakadevelop1102@gmail.com\" commit -m \"作業完了: タスク実行後の自動コミット\n\nGenerated with [Claude Code](https://claude.ai/code)\n\nCo-Authored-By: Claude <noreply@anthropic.com>\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit*",
        "hooks": [
          {
            "type": "command",
            "command": "dir /ad /b Assets\\MyGame"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command", 
            "command": "echo \"セッション終了時処理完了\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"進捗通知: 処理完了\""
          }
        ]
      }
    ]
  },
  "workflow": {
    "auto_git_operations": true,
    "test_on_completion": true,
    "notification_language": "ja",
    "structure_monitoring": true,
    "claude_md_auto_update": true,
    "commit_on_milestone": true,
    "milestone_triggers": [
      "feature_complete",
      "refactor_complete",
      "bug_fix_complete"
    ]
  },
  "git_settings": {
    "commit_format": "作業完了: {description}",
    "milestone_commit_format": "進捗保存: {description}",
    "auto_stage": true,
    "force_commands_disabled": true,
    "commit_frequency": "milestone_based"
  },
  "documentation": {
    "claude_md_path": "CLAUDE.md",
    "structure_section_marker": "### Unityプロジェクト構造",
    "auto_update_on_structure_change": true,
    "backup_before_update": true
  },
  "commands": {
    "sprite-create-tool": {
      "path": "ClaudeCodeTools/sprite-create-tool.bat",
      "description": "64x64のスプライト画像を作成します。引数: (R,G,B,A)",
      "working_directory": ".",
      "enabled": true
    },
    "run-editmode-tests": {
      "path": "curl",
      "args": [
        "-s",
        "http://localhost:56780/mcp",
        "-H",
        "Content-Type: application/json",
        "-d",
        "{\"jsonrpc\":\"2.0\",\"method\":\"tools/call\",\"params\":{\"name\":\"RunEditModeTests\",\"arguments\":{}},\"id\":1}"
      ],
      "description": "Unity EditModeテストをMCPサーバー経由で実行します",
      "working_directory": ".",
      "enabled": true
    }
  }
}